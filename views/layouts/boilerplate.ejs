<!-- This is our boilerplate view template. In the body we include partials
for navbar, footer and flash messages(displayed only when called), and javascript
for our templates. In -body we insert content from other templates.
EJS mate is the package we use for this kind of  -->

<!-- Using bootstrap 5.1 for styling -->

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

  <!-- Mampbox GL JS for displaying a map. -->
  <script src='https://api.mapbox.com/mapbox-gl-js/v2.7.0/mapbox-gl.js'></script>
  <link href='https://api.mapbox.com/mapbox-gl-js/v2.7.0/mapbox-gl.css' rel='stylesheet' />

  <link rel="stylesheet" href="/stylesheets/app.css">

  <title>YelpCamp</title>
</head>

<body class="d-flex flex-column vh-100">

  <!-- Here we include our navbar from our partials file. -->
  <%- include('../partials/navbar') %>

  <main class="container mt-5">
    <!-- Here we include partials for flash messages -->
    <%- include('../partials/flash')   %>

    <!-- This is where all other templates will fit in -->
    <%- body  %>
  </main>

  <!-- Here we include partials for footer -->
  <%- include('../partials/footer')  %>

  <!-- Javascript for bootstrap, from bootstrap website -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

  <!-- Here we run our javascript for form validation from our static file in public -->
  <script src="/javascripts/validateForms.js"></script>

</body>

</html>